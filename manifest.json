{
  "manifest_version": 3,
  "name": "Web Memo",
  "version": "1.0",
  "description": "Save and analyze webpage content with AI-powered insights",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Web Memo",
    "default_icon": {
      "16": "icons/webmemo-logo-16.png",
      "48": "icons/webmemo-logo-48.png",
      "128": "icons/webmemo-logo-128.png"
    }
  },
  "icons": {
    "16": "icons/webmemo-logo-16.png",
    "48": "icons/webmemo-logo-48.png",
    "128": "icons/webmemo-logo-128.png"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "status.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  }
} 